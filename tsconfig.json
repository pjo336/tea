{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "build",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}