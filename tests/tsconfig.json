{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": [
      "es2018",
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules/@types",
      "./types",
      "../src/types"
    ],
    "paths": {
      "~/*": [
        "../*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}